<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_player_page"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:layout_height="match_parent"
    tools:context="com.bruce.kidzymer.kidpoems.Player_pageActivity"
    android:background="@drawable/blue_border">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_above="@+id/seekbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Tx_poem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="Jhonny Jhonny"
                android:textSize="@dimen/_23sdp">
            </TextView>

        </LinearLayout>
    </ScrollView>


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_above="@+id/media_controls_layout"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:thumb="@drawable/thumb"
        android:progressDrawable="@drawable/seekbar"
        android:layout_height="@dimen/_6sdp" />


    <RelativeLayout
        android:id="@+id/media_controls_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/left_song_button"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_20sdp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/left_song_button"
            android:padding="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/play_song_button"
            android:layout_width="@dimen/_60sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/resume_button_blue" />


        <Button
            android:id="@+id/right_song_button"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_20sdp"
            android:rotation="180"
            android:layout_alignParentRight="true"
            android:background="@drawable/left_song_button"
            android:padding="@dimen/_20sdp" />


    </RelativeLayout>



</RelativeLayout>
